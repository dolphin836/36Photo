{% extends "Template.twig" %}

{% block Js %}
<script src="/assets/dist/js/zooming-4f973d8ee8.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
    new Zooming().listen('.img-zoomable');
}); 
</script>
{% endblock %}

{% block Content %}
<div class="container" style="padding-top: 4rem;">
    <div class="row">
        <div class="column column-80" style="margin:0 auto;">
            <img src="{{ photo }}" alt="" class="img-zoomable">
        </div>
        <div class="column">
            <dl>
                <dt>大小</dt>
                <dd><em>{{ size }}</em></dd>
                <dt>尺寸</dt>
                <dd><em>{{ width }} * {{ height }}</em></dd>
                <dt>日期</dt>
                <dd><em>{{ gmt_create }}</em></dd>
                <dt>颜色</dt>
                {% for hex in color %}
                    <a href="/color/{{ hex }}" class="color" style="background-color: #{{ hex }};"></a>
                {% endfor %}
                <dt>标签</dt>
                <ul style="list-style-type: none;">
                    {% for m in mark %}
                    <li><a href="/mark/{{ m.name }}" class="mark">{{ m.name }}</a></li>
                    {% endfor %}
                </ul>
                <dt>分类</dt>
                <dd><a href="/category/{{ category_code }}">{{ category_name }}</a></dd>
            </dl>
            <a href="/photo/d/{{ hash }}" class="button button-outline" download target="_blank">免费下载</a>
        </div>
    </div>
</div>

{% endblock %}