{% extends "Template.twig" %}

{% block Title %}
流行颜色
{% endblock %}

{% block Content %}
<div class="container">
    {% for color in colors %}
        {% if loop.index0 % 4 == 0 %}
        <div class="row">
        {% endif %}
            <div class="column text-center">
                <a href="/color/{{ color }}" class="color animated fadeIn" style="background-color: #{{ color }};"></a>
            </div>
        {% if loop.index0 % 4 == 3 %}
        </div>
        {% endif %}
    {% endfor %}
</div>
{% endblock %}
